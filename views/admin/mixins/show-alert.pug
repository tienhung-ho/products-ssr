mixin alert-success(time)
  if(messages.success)
    div(
      class='message.success alert alert-success'
      show-alert
      data-time=time
    ) #{messages.success} <span close-alert>x</span>

mixin alert-error(time)
  if(messages.error)
    div(
      class='message.error alert alert-danger'
      show-alert
      data-time=time
    ) #{messages.error} <span close-alert>x</span>
